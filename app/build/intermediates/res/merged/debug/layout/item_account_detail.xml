<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txv_item_account_detail_action_descript"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_1"
                android:paddingBottom="@dimen/space_8"
                android:paddingLeft="@dimen/space_4"
                android:paddingTop="@dimen/space_8"
                android:text="行为描述"
                android:textColor="@color/green"
                android:textSize="@dimen/text_size_sp_22" />


            <TextView
                android:id="@+id/txv_item_account_detail_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_1"
                android:paddingLeft="@dimen/space_4"
                android:paddingTop="@dimen/space_4"
                android:text="日期："
                android:textColor="@color/black_overlay"
                android:textSize="@dimen/text_size_sp_12" />

            <TextView
                android:id="@+id/txv_item_account_detail_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_1"
                android:paddingLeft="@dimen/space_4"
                android:paddingTop="@dimen/space_4"
                android:paddingBottom="@dimen/space_4"
                android:text="金额前后变化。。。"
                android:textColor="@color/green"
                android:textSize="@dimen/text_size_sp_14" />
        </LinearLayout>

        <TextView
            android:id="@+id/txv_item_account_detail_amounts"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|right"
            android:paddingBottom="@dimen/space_4"
            android:paddingRight="@dimen/space_4"
            android:text="+20"
            android:textAlignment="gravity"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_sp_46" />
    </LinearLayout>

    <TextView
        android:id="@+id/txv_item_account_detail_relate_order_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/space_4"
        android:paddingLeft="@dimen/space_4"
        android:text="关联订单号："
        android:textColor="#BA55D3"
        android:textSize="@dimen/text_size_sp_14" />

</LinearLayout>
