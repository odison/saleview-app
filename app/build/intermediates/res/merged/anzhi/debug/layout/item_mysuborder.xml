<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txv_item_mysub_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/space_4"
                        android:paddingTop="@dimen/space_4"
                        android:text="订单号：12345678901234567890"
                        android:textColor="#BA55D3"
                        android:textSize="@dimen/text_size_sp_16" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txv_item_mysub_receiver_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_1"
                            android:paddingLeft="@dimen/space_4"
                            android:paddingTop="@dimen/space_4"
                            android:text="收件人"
                            android:textColor="@color/green"
                            android:textSize="@dimen/text_size_sp_14" />

                        <TextView
                            android:id="@+id/txv_item_mysub_commodity"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="bottom|center"
                            android:paddingRight="@dimen/space_4"
                            android:text="商品类型"
                            android:textAlignment="gravity"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/text_size_sp_12" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/txv_item_mysub_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingLeft="@dimen/space_4"
                        android:paddingTop="@dimen/space_4"
                        android:text="状态：已接单" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@id/drag_handle"
                android:layout_width="@dimen/space_40"
                android:layout_height="match_parent"
                android:background="@color/white00" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txv_item_mysub_receiver_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_1"
        android:paddingLeft="@dimen/space_4"
        android:paddingTop="@dimen/space_4"
        android:text="配送地址："
        android:textColor="@color/black_overlay"
        android:textSize="@dimen/text_size_sp_14" />
</LinearLayout>
