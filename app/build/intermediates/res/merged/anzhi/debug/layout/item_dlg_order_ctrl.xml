<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txv_item_dlg_order_ctrl_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/space_4"
                        android:paddingTop="@dimen/space_4"
                        android:text="订单号：12345678901234567890"
                        android:textColor="#BA55D3"
                        android:textSize="@dimen/text_size_sp_18" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txv_item_dlg_order_ctrl_receiver_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_1"
                            android:paddingLeft="@dimen/space_4"
                            android:paddingTop="@dimen/space_4"
                            android:text="收件人"
                            android:textColor="@color/green"
                            android:textSize="@dimen/text_size_sp_14" />

                        <TextView
                            android:id="@+id/txv_item_dlg_order_ctrl_commodity"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="bottom|center"
                            android:paddingRight="@dimen/space_4"
                            android:text="商品类型"
                            android:textAlignment="gravity"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/text_size_sp_12" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"

            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <ImageButton
                android:id="@+id/imb_item_dlg_order_ctrl_phone"
                android:layout_marginRight="@dimen/space_12"
                android:layout_marginBottom="@dimen/space_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/quick_background_90"
                android:src="@drawable/icon_phone"
                android:clickable="true"
                android:layout_gravity="bottom|right" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/txv_item_dlg_order_ctrl_receiver_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_1"
        android:paddingLeft="@dimen/space_4"
        android:paddingTop="@dimen/space_4"
        android:paddingBottom="@dimen/space_4"
        android:text="配送地址："
        android:textColor="@color/black_overlay"
        android:textSize="@dimen/text_size_sp_16" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/space_4"
        android:paddingTop="@dimen/space_4"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txv_item_dlg_order_ctrl_dispatch_personal"
            android:text="用户签收"
            android:textSize="@dimen/text_size_sp_20"
            android:textColor="@color/black_overlay"
            android:background="@color/yellow"
            android:gravity="center"

            android:paddingTop="@dimen/space_8"
            android:paddingBottom="@dimen/space_8"
            android:clickable="true"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txv_item_dlg_order_ctrl_dispatch_property"
            android:text="物业签收"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"

            android:paddingTop="@dimen/space_8"
            android:paddingBottom="@dimen/space_8"
            android:textSize="@dimen/text_size_sp_20"
            android:textColor="@color/black_overlay"
            android:background="@color/green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/space_4"
        android:paddingTop="@dimen/space_4"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txv_item_dlg_order_ctrl_dispatch_phone_no_response"
            android:text="无人接听"
            android:textSize="@dimen/text_size_sp_20"
            android:textColor="@color/white"
            android:background="@color/red"
            android:gravity="center"

            android:paddingTop="@dimen/space_8"
            android:paddingBottom="@dimen/space_8"
            android:clickable="true"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txv_item_dlg_order_ctrl_dispatch_error_embrace"
            android:text="揽件错误"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"

            android:paddingTop="@dimen/space_8"
            android:paddingBottom="@dimen/space_8"
            android:textSize="@dimen/text_size_sp_20"
            android:textColor="@color/white"
            android:background="@color/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
