<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical" >


    <TextView
        android:id="@+id/txv_item_sub_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/space_4"
        android:paddingTop="@dimen/space_4"
        android:textSize="@dimen/text_size_sp_16"
        android:textColor="#BA55D3"
        android:text="订单号：12345678901234567890"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txv_item_sub_receiver_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/space_4"
            android:paddingTop="@dimen/space_4"
            android:layout_marginTop="@dimen/space_1"
            android:textColor="@color/green"
            android:textSize="@dimen/text_size_sp_14"
            android:text="收件人"/>

        <TextView
            android:id="@+id/txv_item_sub_commodity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="商品类型"
            android:textAlignment="gravity"
            android:paddingRight="@dimen/space_4"
            android:textSize="@dimen/text_size_sp_12"
            android:textColor="@color/gray"
            android:gravity="bottom|center" />
    </LinearLayout>
    <TextView
        android:id="@+id/txv_item_sub_receiver_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_sp_14"
        android:paddingLeft="@dimen/space_4"
        android:paddingTop="@dimen/space_4"
        android:layout_marginTop="@dimen/space_1"
        android:textColor="@color/black_overlay"
        android:text="配送地址："/>


</LinearLayout>
