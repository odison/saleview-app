<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/space_1"
    android:paddingLeft="@dimen/space_1"
    android:paddingRight="@dimen/space_1"
    android:paddingTop="@dimen/space_1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.odison.saleview.ui.AccountActivity"
    tools:showIn="@layout/activity_account">



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f64412"
            android:id="@+id/linearLayout">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="账户余额(元)"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/white"
                android:gravity="center" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txv_account_balance"
                android:text="0.00"
                android:textSize="@dimen/text_size_70"
                android:textColor="@color/white"
                android:gravity="center" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="即将到账(元)"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/white"
                android:gravity="center" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txv_account_balance_future"
                android:text="0.00"
                android:textSize="@dimen/text_size_18"
                android:textColor="@color/white"
                android:gravity="center" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout"
        android:paddingBottom="@dimen/space_8">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="提现规则说明"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/red"
            android:gravity="center"
            android:clickable="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="@dimen/space_26"
            android:paddingRight="@dimen/space_26"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_account_detail"


                android:text="明细"
                android:textSize="@dimen/text_size_24"
                android:gravity="center"
                android:enabled="true"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="@dimen/space_26"
            android:paddingRight="@dimen/space_26"
            android:paddingBottom="@dimen/space_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:id="@+id/btn_account_recharge"
                android:text="提现"
                android:textSize="@dimen/text_size_24"
                android:gravity="center"
                android:enabled="false"/>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
