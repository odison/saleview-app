<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/space_1"
    android:paddingLeft="@dimen/space_1"
    android:paddingRight="@dimen/space_1"
    android:paddingTop="@dimen/space_1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.odison.saleview.ui.UserInfoActivity"
    tools:showIn="@layout/activity_user_info">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/space_49"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout2">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imv_user"
                android:paddingTop="@dimen/space_4"
                android:paddingLeft="@dimen/space_4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/widget_dface"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/space_8"
                    android:paddingLeft="@dimen/space_4"
                    android:id="@+id/txv_user_name"
                    android:text="用户名"
                    android:textSize="@dimen/space_18"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/space_8"
                    android:paddingLeft="@dimen/space_4"
                    android:id="@+id/txv_user_address"
                    android:text="地址"
                    android:textSize="@dimen/space_14"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_4"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:paddingTop="@dimen/space_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e0d8d8">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/space_8"
                    android:paddingBottom="@dimen/space_12"
                    android:text="电话"
                    android:textSize="@dimen/text_size_20"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txv_user_phone"
                    android:layout_gravity="end"
                    android:paddingRight="@dimen/space_8"
                    android:text="12345678910"
                    android:textSize="@dimen/text_size_20"
                    android:singleLine="true"
                    android:textColor="#0a24b9"
                    android:textAlignment="textEnd" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_4"></LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:paddingTop="@dimen/space_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e0d8d8">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/space_8"
                    android:paddingBottom="@dimen/space_12"
                    android:text="加入时间"
                    android:textSize="@dimen/text_size_20"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txv_user_signtime"
                    android:layout_gravity="end"
                    android:paddingRight="@dimen/space_8"
                    android:text="2015-12-12"
                    android:textSize="@dimen/text_size_20"
                    android:singleLine="true"
                    android:textColor="#0a24b9"
                    android:textAlignment="textEnd" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_4"></LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:paddingTop="@dimen/space_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e0d8d8">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/space_8"
                    android:paddingBottom="@dimen/space_12"
                    android:text="状态"
                    android:textSize="@dimen/text_size_20"/>

                <Switch
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/space_8"
                    android:textOff="@string/user_info_switch_off"
                    android:textSize="@dimen/text_size_12"
                    android:textOn="@string/user_info_switch_on"
                    android:id="@+id/swh_user_state"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/space_8"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_alignStart="@+id/linearLayout2">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_user_goaccount"
            android:text="查看账户"
            android:textSize="@dimen/text_size_18"
            android:visibility="gone" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_user_changepwd"
            android:text="修改密码"
            android:textSize="@dimen/text_size_18"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/space_8"
            android:id="@+id/btn_user_logout"
            android:textSize="@dimen/text_size_18"
            android:text="退出"/>
    </LinearLayout>
</RelativeLayout>
